<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <TextView
        android:id="@+id/nofinishshiplist_lv_item_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:lines="1"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/nofinishshiplist_lv_item_tv_billno"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dip"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/nofinishshiplist_lv_item_bt_start"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:layout_margin="2dp"
                android:focusable="false"
                android:background="@mipmap/go_car" />
            <Button
                android:id="@+id/nofinishshiplist_lv_item_tv_finish"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:textColor="@color/white"
                android:focusable="false"
                android:layout_margin="2dp"
                android:background="@mipmap/difficult" />
            <TextView
                android:id="@+id/nofinishshiplist_lv_item_tv_distance"
                android:layout_width="0dip"
                android:layout_weight="1.5"
                android:layout_height="40dip"
                android:focusable="false"
                android:textColor="#000000"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:background="@color/white"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
