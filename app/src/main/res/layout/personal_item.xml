<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgray">
    <RelativeLayout
        android:id="@+id/personal_item_setting"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="5dip">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:id="@+id/personal_item_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_8f"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/personal_item_img1"
            android:layout_marginRight="30sp"/>
        <ImageView
            android:id="@+id/personal_item_img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/toright"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/personal_item_chake_updata"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="5dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chake_updata"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:id="@+id/personal_item_tv_updata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_8f"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/personal_item_img2"
            android:layout_marginRight="30sp"/>
        <ImageView
            android:id="@+id/personal_item_img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/toright"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/personal_item_about"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="5dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_8f"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/personal_item_img3"
            android:layout_marginRight="30sp"/>
        <ImageView
            android:id="@+id/personal_item_img3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/toright"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"/>

    </RelativeLayout>



</LinearLayout>